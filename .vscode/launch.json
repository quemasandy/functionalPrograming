{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸ› Run Scala",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/scala-cli-wrapper",
      "args": [
        "run",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "ğŸ”¥ğŸ”¥ Run Scala Watch Mode",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/scala-cli-wrapper",
      "args": [
        "run",
        "--watch",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "ğŸ› Debug Current TS File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "/Users/andy/.nvm/versions/node/v20.19.6/bin/node",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${file}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}